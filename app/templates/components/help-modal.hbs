<div class="help">
  <div class="help-button" onClick={{action "openModal" "help-modal"}}>
    <i class="help circle outline icon"></i> Help
  </div>
  {{#ui-modal name="help-modal" class="help-modal" onApprove=(action 'approveModal') onDeny=(action 'denyModal')}}
    <i class="close icon"></i>
    <div class="header">
      How can we help?
    </div>
    <div class="content">
      <div class="description" style="font-weight: normal !important;">
        <p>Having trouble contributing or editing a source? Please fill out this form so that we can help. </p>
        <form class="ui form">
          <div class="eight wide field">
            <label> Contact Email </label>
            <input type="text" name="email" placeholder="Email Address">
          </div>
          <div class="field">
            <label> Data Source </label>
            <div class="grouped fields" style="margin-left: 10px">
              <div class="field">
                {{ui-radio name="source" label="Provide a link to data" value="provide" current=source onChange=(action (mut source))}}
              </div>
              {{#if (eq source "provide")}}
                <div class="eight wide field" style="margin-left: 20px">
                  <div class="ui small labeled input">
                    <div class="ui label">URL</div>
                    <input type="text" placeholder="URL for hosted data">
                  </div>
                </div>
              {{/if}}
              <div class="field">
                {{ui-radio name="source" label="Upload data" value="upload" current=source onChange=(action (mut source))}}
              </div>
              {{#if (eq source "upload")}}
                <div class="eight wide field" style="margin-left: 20px">
                  <label for="uploadfile" class="ui small icon button">
                    <i class="file icon"></i>
                    Choose file to upload
                  </label>
                  <input type="file" id="uploadfile" style="display:none">
                </div>
              {{/if}}
            </div>
          </div>
          <div class="field">
            <label>Provide explanation of the problem </label>
            <textarea rows="3"></textarea>
          </div>
        </form>
      </div>
    </div>
    <div class="actions">
      <div class="ui black deny button">
        Cancel
      </div>
      <div class="ui positive right button">
        Submit
      </div>
    </div>
  {{/ui-modal}}
</div>
