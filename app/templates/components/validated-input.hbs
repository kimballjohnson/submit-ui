<div class="{{if required "required"}} field ">
	<label>{{label}}</label>
	{{input type="text" value=(get changeset propertyName) changeset=changeset placeholder=placeholder }}
</div>
<div>
	{{#if showErrorState}}
		<ul class="list">
			{{#each changeset.errors as |errorSet|}}
				{{#if (eq errorSet.key propertyName)}}
					{{#each errorSet.validation as |error|}}
							<li>{{error}}</li>
					{{/each}}
				{{/if}}
			{{/each}}
		</ul>
	{{/if}}
</div>