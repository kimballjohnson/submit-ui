<div class="ui text container">
	<h3 class="first headroom">Contact information</h3>
	{{#with (changeset model MaintainerValidator) as |changeset|}}
		<div class="ui grid">
			<div class="eight wide column ui form">
				{{validated-input
					label="Name"
					propertyName="maintainer_name"
					placeholder="name"
					changeset=changeset
					showErrorState=showErrorState}}
				</div>
				<div class="eight wide column ui form">
					{{validated-input
						label="Email address"
						propertyName="maintainer_email"
						placeholder="email address"
						required=true
						changeset=changeset
						showErrorState=showErrorState}}
					</div>

		</div>
		{{#if model.edit_mode}}
			<button class="ui button purple right floated" onClick={{action "returnToReview" changeset}}><i class="checkmark icon"></i>Finished editing</button>
		{{else}}
			{{nav-buttons showError="showError" sendChangeRoute="changeRoute" back="mapping" next="review" changeset=changeset}}
		{{/if}}		
	{{/with}}
</div>