<div class="ui text container">
	<h3 class="first headroom">Add data</h3>
	<p>
		Here's where you can add data.
	</p>
	{{#with (changeset model DataValidator) as |changeset|}}
		<form class="ui form segment">
			<div class="required field">
	    	<label>Choose data format</label>
	    	<div class="ui error message">
			    <p>Please add data to proceed</p>
			  </div>
				{{#ui-dropdown class="selection" selected=selectedFormat onChange=(action (mut selectedFormat)) as |execute mapper|}}
					<div class="default text">Formats</div>
				  <i class="dropdown icon"></i>
				  <div class="menu">
				    {{#each formats as |format|}}
				      <div class="item" data-value="{{ map-value mapper format}}">
				        {{format}}
				      </div>
				    {{/each}}
				  </div>
				{{/ui-dropdown}}
			</div>
	    {{#if (eq selectedFormat "Download link (.zip, etc.)")}}
				<div class="required field">
					{{validated-input label="Paste the URL to download" changeset=changeset propertyName="data_link" placeholder="http://..."}}
				</div>
			{{/if}}
			{{#if (eq selectedFormat "ArcGIS server link")}}
				<div class="required field">
					{{validated-input label="Paste the ArcGIS server URL" changeset=changeset propertyName="data_link" placeholder="http://... .???"}}
					<!-- {{input type="text" value=changeset.data_link changeset=changeset placeholder="http://... .???"}} -->
				</div>
			{{/if}}
			{{#if (eq selectedFormat "Direct upload")}}
				<div class="required field">
					<label >Add file</label>
					<input type="file" id="upload" onChange={{action "uploadData"}}>
				</div>
			{{/if}}
		</form>
		{{nav-buttons sendChangeRoute="changeRoute" back="intro" next="source" changeset=changeset}}
	{{/with}}
</div>
