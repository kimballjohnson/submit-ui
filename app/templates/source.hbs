<div class="ui text container">
	<h3 class="first headroom">Add data source info</h3>
	<p>
		Here's where you can add source information.
	</p>
  {{#with (changeset model SourceValidator) as |changeset|}}
  	<div class="ui form segment {{if errorState "error"}}">
  		<div class="required field {{if sourceError "error"}}">
      	<!-- <label>Data Source</label>
      	{{input type="text" value=source placeholder="source name" autofocus=true}} -->
        {{validated-input label="Data source" changeset=changeset propertyName="source_name" placeholder="source name"}}
      	<div class="ui error message">
  		    <p>Please provide the source to proceed</p>
  		  </div>
      </div>
      <div class="required field {{if frequencyError "error"}}">
      	<!-- <label>Update frequency</label>
      	{{input type="text" value=frequency placeholder="frequency" autofocus=true}} -->
        {{validated-input label="Update frequency" changeset=changeset propertyName="update_frequency" placeholder="frequency"}}
      	<div class="ui error message">
  		    <p>Please provide the update frequency to proceed</p>
  		  </div>
      </div>
  	</div>
  	{{nav-buttons sendChangeRoute="changeRoute" back="data" next="license" changeset=changeset}}
  {{/with}}
</div>